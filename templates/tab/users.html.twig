
    {% extends 'template.html.twig' %}


    {% block body %}
    {{include ('fragments/date-jour.html.twig')}}
    <table class="table">
        <thead class="table-active">
            <tr>
                <th>Firstname</th>
                <th>Name</th>
                <th>Age</th>
                <th>Message</th>
            </tr>
        </thead>
        
        <tbody>
            {% for user in users %}
        <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.age }}</td>
                    <td>{{render(controller('app\\controller\\FirstController::sayHello',{firstname : user.firstname,name: user.name})) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}
    users
{% endblock %}
{% block page_title %}
    liste des users 
 {% endblock %}